generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ELEVE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(ELEVE)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  eventRegistrations EventRegistration[]
  cafeteriaOrders    CafeteriaOrder[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  image       String?
  date        DateTime
  location    String
  sumupLink   String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  registrations EventRegistration[]
  photos        Photo[]

  @@map("events")
}

model EventRegistration {
  id        String   @id @default(cuid())
  userId    String
  eventId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@map("event_registrations")
}

model Photo {
  id        String   @id @default(cuid())
  eventId   String
  url       String
  caption   String?
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("photos")
}

model Page {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  content         String   @db.LongText
  metaTitle       String?
  metaDescription String?
  isPublished     Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("pages")
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  type      String   @default("text")
  label     String?
  group     String   @default("general")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model Media {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String
  mimeType  String
  alt       String?
  size      Int
  createdAt DateTime @default(now())

  @@map("media")
}

// ============================================
// GESTION CAFÉTÉRIA
// ============================================

model ProductCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  image       String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products Product[]

  @@map("product_categories")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2)
  costPrice   Decimal? @db.Decimal(10, 2) // Prix d'achat unitaire
  image       String?
  categoryId  String?
  stock       Int      @default(0)
  isAvailable Boolean  @default(true)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category ProductCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  orderItems CafeteriaOrderItem[]

  @@map("products")
}

// ============================================
// COMMANDES CAFÉTÉRIA
// ============================================

enum CafeteriaOrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

model CafeteriaOrder {
  id        String               @id @default(cuid())
  userId    String
  status    CafeteriaOrderStatus @default(PENDING)
  total     Decimal              @db.Decimal(10, 2)
  notes     String?              @db.Text
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  user  User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CafeteriaOrderItem[]

  @@map("cafeteria_orders")
}

model CafeteriaOrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  order   CafeteriaOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product        @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("cafeteria_order_items")
}
